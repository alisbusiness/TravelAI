{
  "name": "tripgenie-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run -r build",
    "lint": "pnpm run -r lint",
    "format": "pnpm run -r format",
    "typecheck": "pnpm run -r typecheck",
    "test": "pnpm run -r test",
    "compose:up": "docker-compose -f infrastructure/docker-compose.yml up --build",
    "compose:down": "docker-compose -f infrastructure/docker-compose.yml down -v",
    "compose:logs": "docker-compose -f infrastructure/docker-compose.yml logs -f",
    "compose:ps": "docker-compose -f infrastructure/docker-compose.yml ps"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}