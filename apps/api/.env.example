# Core
NODE_ENV=development
PORT=8080
APP_URL=http://localhost:8080
CLIENT_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tripgenie?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Auth
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
MAGIC_LINK_SECRET=your_magic_link_secret_here
MAGIC_LINK_TTL_MINUTES=20

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="TripGenie <no-reply@tripgenie.ai>"

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MODEL_LIGHT=gpt-4o-mini

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret
STRIPE_PRICE_PREMIUM_MONTHLY=price_id_monthly
STRIPE_PRICE_PREMIUM_YEARLY=price_id_yearly
STRIPE_SUCCESS_URL=http://localhost:3000/checkout/success
STRIPE_CANCEL_URL=http://localhost:3000/checkout/cancel

# Providers (optional)
PROVIDER_AMADEUS_ENABLED=false
AMADEUS_API_KEY=
AMADEUS_API_SECRET=

PROVIDER_KIWI_ENABLED=false
KIWI_API_KEY=

PROVIDER_GYG_ENABLED=false
GYG_API_KEY=

# Affiliate
AFFILIATE_BOOKING_COM_PARTNER_ID=your_partner_id
AFFILIATE_UTM_SOURCE=tripgenie
AFFILIATE_UTM_MEDIUM=affiliate